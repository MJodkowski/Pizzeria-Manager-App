<section class="form">
    <h2 class="section-header">{{header}}</h2>
    <form>
        <div>
            <label for="name">Nazwa:</label>
            {{input class="input" type="text" id="name" name="name" required="true" value=model.pizzeria.name}}
        </div>
        <fieldset>
            <legend>Adres:</legend>
            <div>
                <label for="city">Miasto:</label>
                {{input id="city" name="city" required="true" value=model.pizzeria.city}}
            </div>
            <div class="form-container">
                <div class="address-street">
                    <label for="street">Ulica:</label>
                    {{input id="street" name="street" required="true" value=model.pizzeria.street}}
                </div>
                <div class="address-number">
                    <label for="number">Numer:</label>
                    {{input id="number" name="number" type="number" required="true" value=model.pizzeria.number}}
                </div>
            </div>
        </fieldset>
        <div class="form-container">
            <div>
                <label for="hours-from">Otwarte od:</label>
                {{input type="time" class="form-hours" id="hours-from" name="hours-from" required="true" value=model.pizzeria.hoursFrom}}
            </div>
            <div>
                <label for="hours-to">do:</label>
                {{input type="time" class="form-hours" id="hours-to" name="hours-to" required="true" value=model.pizzeria.hoursTo}}
            </div>
        </div>
        <div>
            <fieldset>
                <legend>Menu:</legend>
                    {{#each checkedPizzas as |pizza|}}
                    <div>
                        {{input class="inline-block" type="checkbox" name=pizza.name checked=pizza.isChecked}}
                        <label class="inline-block" for={{pizza.name}}>{{pizza.name}}</label>
                    </div>
                    {{/each}}
            </fieldset>
        </div>
        <input class="button" type="submit" value={{submit}} {{action "savePizzeria" model.pizzeria preventDefault=true}}>
    </form>
    <div class="error">
        {{#each errMessage as |err|}}
            <p>{{err}}</p>
        {{/each}}
    </div>
</section>